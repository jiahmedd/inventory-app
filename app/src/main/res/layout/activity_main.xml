<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#F3E5F5"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Jihan's Jewelry's Inventory System!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="20dp"
        android:textColor="#B9164D"
        android:textAlignment="center"
        android:shadowColor="#AA000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3" />


    <Button
        android:id="@+id/manageInventory"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:onClick="manageInventory"
        android:padding="12dp"
        android:text="Manage Inventory"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/handleOrder"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:onClick="handleOrder"
        android:padding="12dp"
        android:text="Handle Order"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="16dp"
        android:layout_gravity="center" />


</LinearLayout>
